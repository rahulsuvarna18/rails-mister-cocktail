<%= simple_form_for([@cocktail, @dose]) do |d| %>

<% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= d.association :ingredient %>
    <%= d.input :description %>
  </div>

  <div class="form-actions">
    <%= d.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
